<!-- navbar.ejs -->

<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }
  .search-btn i {
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    font-size: 1rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><i class="fa-solid fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listing">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <!-- Search form with id="navbarSearchForm" -->
        <form class="d-flex" id="navbarSearchForm">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search destinations" aria-label="Search" id="navbarSearchInput">
          <button class="btn search-btn" type="button"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listing/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" aria-current="page" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- Script for search filtering -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.getElementById("navbarSearchInput");
    const allListings = Array.from(document.querySelectorAll(".listing-card"));

    searchInput.addEventListener("input", (event) => {
      const filter = event.target.value.trim().toLowerCase();

      allListings.forEach((listing) => {
        const listingName = listing.getAttribute("data-name").toLowerCase();
        if (listingName.includes(filter)) {
          listing.parentNode.style.display = ""; // Show parent column
        } else {
          listing.parentNode.style.display = "none"; // Hide parent column
        }
      });
    });

    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      const taxInfo = document.querySelectorAll(".tax-info");

      taxInfo.forEach((info) => {
        info.classList.toggle("tax-hidden"); // Toggle tax info visibility
      });
    });
  });
</script>








